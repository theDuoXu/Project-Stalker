<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="projectstalker.ui.view.components.SensorCardController"
      styleClass="sensor-card"
      prefWidth="140" prefHeight="100" spacing="5"
      style="-fx-background-color: -color-bg-default; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="5">
        <FontIcon fx:id="typeIcon" iconLiteral="mdi2a-atom" iconSize="16" styleClass="text-muted"/>
        <Label fx:id="nameLabel" text="S-PH-01" style="-fx-font-weight: bold; -fx-font-size: 11px;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <FontIcon fx:id="statusIcon" iconLiteral="mdi2c-circle" iconSize="10" iconColor="#28a745"/>
    </HBox>

    <Region VBox.vgrow="ALWAYS"/>

    <Label fx:id="valueLabel" text="7.4 pH" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="locationLabel" text="Km 12.5" styleClass="text-small, text-muted"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="trendLabel" text="â–²" style="-fx-text-fill: -color-danger-fg; -fx-font-size: 10px;"/>
    </HBox>

</VBox>