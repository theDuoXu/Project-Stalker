<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="800.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="projectstalker.ui.view.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header-bar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
            </padding>
            <FontIcon iconLiteral="mdi2w-water" iconSize="24"/>
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="PROJECT STALKER DSS"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="newProjectButton" text="Nuevo Proyecto" onAction="#onNewProjectClick">
                <graphic>
                    <FontIcon iconLiteral="mdi2f-file-plus" iconSize="16"/>
                </graphic>
            </Button>

            <Button fx:id="loginButton" text="Conectar a Keycloak" onAction="#onLoginClick" styleClass="accent">
                <graphic>
                    <FontIcon fx:id="loginIcon" iconLiteral="mdi2l-login" iconSize="16" />
                </graphic>
            </Button>
        </HBox>
    </top>

    <left>
        <VBox fx:id="twinsSideBar" spacing="5.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label style="-fx-font-size: 11px; -fx-text-fill: -color-fg-muted;" text="GEMELOS DIGITALES"/>
            <ListView fx:id="projectListView" VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea"
                   style="-fx-background-color: -color-bg-subtle; -fx-border-color: -color-border-muted; -fx-border-width: 1 0 0 1;"
                   BorderPane.alignment="CENTER">
            <Label style="-fx-text-fill: -color-fg-muted;" text="Selecciona o crea un Gemelo Digital para comenzar"/>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0"
              style="-fx-border-color: -color-border-muted; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <FontIcon iconLiteral="mdi2s-server-network" iconSize="14"/>
            <Label fx:id="statusLabel" style="-fx-font-size: 11px;" text="Sistema DSS Inicializado"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Separator orientation="VERTICAL"/>
            <Label fx:id="hpcStatusLabel" styleClass="status-error" text="HPC Engine: DISCONNECTED"/>
        </HBox>
    </bottom>

</BorderPane>